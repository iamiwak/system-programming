<Window x:Class="firstLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:firstLab"
        mc:Ignorable="d"
        Title="Основное окно" MinHeight="300" Height="450" MinWidth="600" Width="1200" SizeChanged="WindowSizeChanged" Closing="OnClosing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="FirstButton" Content="Start first thread" Click="ChangeFirstThreadState" Width="125" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
        <Button x:Name="SecondButton" Grid.Column="1" Content="Start second thread" Click="ChangeSecondThreadState" Width="125" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
    </Grid>
</Window>
